{
  "path": {
    "src": "src",
    "build": "build"
  },
  "jsConcatFiles": [
    "src/js/vendors/mobile-detect.min.js",
    "src/js/vendors/mobile-detect-modernizr.js",
    "src/js/vendors/cssua.min.js",
    "src/js/vendors/vue.min.js",
    "src/js/vendors/**/*.js"
  ],
  "buildFilesFoldersCopy": [
    "src/**/*/",
    "!src/js/vendors",
    "!src/js/vendors/**/*",
    "!src/maps",
    "!src/maps/**/*",
    "!src/sass",
    "!src/sass/**/*",
    "!src/templates",
    "!src/templates/**/*"
  ],
  "buildFilesFoldersRemove": [
    "build/**/readme.txt",
    "build/**/*.map"
  ]
}